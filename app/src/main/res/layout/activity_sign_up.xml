<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgapps"
    android:padding="30dp"
    tools:context=".Activities.SignUp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/signUp_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:src="@color/colorAccent" />

    <EditText
        android:id="@+id/signUp_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signUp_image"
        android:layout_marginStart="10dp"
        android:layout_marginTop="70dp"
        android:hint="Username"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/signUp_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signUp_username"
        android:layout_margin="10dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/signUp_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signUp_email"
        android:layout_margin="10dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/signUp_confirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signUp_password"
        android:layout_margin="10dp"
        android:hint="Confirm-Password"
        android:inputType="textPassword"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/signUp_role_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signUp_confirmPassword" />

    <Button
        android:id="@+id/signUp_submitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signUp_role_spinner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Sign Up" />

</RelativeLayout>