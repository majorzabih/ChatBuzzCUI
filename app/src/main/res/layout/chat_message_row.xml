<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="8dp"
        android:background="#ffff"
        android:padding="8dp">

        <TextView
            android:id="@+id/chat_message_row_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/chat_message_row_image"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_below="@+id/chat_message_row_username"

             />

        <TextView
            android:id="@+id/chat_message_row_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chat_message_row_image"
            android:layout_marginTop="5dp"
            android:text="Message"
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/chat_message_row_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chat_message_row_message"
            android:layout_toRightOf="@+id/chat_message_row_date"
            android:text="11:00"
            android:layout_marginLeft="5dp"
            android:textColor="#000" />
        <TextView
            android:id="@+id/chat_message_row_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text=""
            android:textColor="#000" />

    </RelativeLayout>

</RelativeLayout>